<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="utf-8" />
  <title><%= pageTitle %> | DrkBot</title>
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
  <meta name="theme-color" content="#222" />
  <meta name="description" content="<%= description %>">

  <link rel="apple-touch-icon" sizes="180x180" href="<%= ppuser %>" />
  <link rel="apple-touch-icon" sizes="180x180" href="<%= ppuser %>" />
  <link rel="icon" type="image/png" sizes="32x32" href="<%= ppuser %>" />
  <link rel="icon" type="image/png" sizes="16x16" href="<%= ppuser %>" />

  <meta property="og:url" content="<%= DOMINIO %>">
  <meta property="og:type" content="website">
  <meta property="og:title" content="<%= pageTitle %>">
  <meta property="og:description" content="<%= description %>">
  <meta property="og:image" content="<%= ppuser %>">
  <meta name="twitter:card" content="summary_large_image">
  <meta property="twitter:domain" content="<%= DOMINIO.slice(8) %>">
  <meta property="twitter:url" content="<%= DOMINIO %>">
  <meta name="twitter:title" content="<%= pageTitle %>">
  <meta name="twitter:description" content="<%= description %>">
  <meta name="twitter:image" content="<%= ppuser %>">

  <script src="./assets/js/jquery.js" type="text/javascript"></script>
  <script src="./assets/js/tod.js" type="text/javascript"></script>
  <script defer src="https://cdnjs.cloudflare.com/ajax/libs/qrcodejs/1.0.0/qrcode.min.js"></script>

  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/intl-tel-input@18.2.1/build/css/intlTelInput.css">
  <link rel="stylesheet" href="/assets/css/gridlex.css">
  <link rel="stylesheet" href="/assets/css/style.css">
  <link rel="stylesheet" href="/assets/css/tod.css">
</head>
<body data-senna="data-senna" data-senna-surface="data-senna-surface">
  <div class="senna-loading-bar"></div>
  
  <header>
    <h1><a href="/" title="DrkBot"><span id="header"><%= BOT_NAME %></span></a></h1>
    <% if (sesionIniciada) { %>
      <% if (isAdmin) { %>
          <span class="act"> [ <a href="/usuario">Dashboard</a> | <a href="/configure">Administración</a> | <a href="/logout"><span class="status-false">Logout</span></a> ] <span>
      <% } else { %>
          <span class="act"> [ <a href="/usuario">Dashboard</a> | <a href="/logout"><span class="status-false">Logout</span></a> ] <span>
      <% } %>
  <% } else { %>
      <span class="act"> [ <a href="/login"><span class="status-false">Ingresa</span></a> ] </span>
  <% } %>
  </header>
  
  <div class="container">
    <div class="grid">
      <!-- Contenido -->
      <div class="col-7_sm-12">
        <h2>Redireccionar Links de WhatsApp</h2>

        <div class="table-1">
          <div class="grid">
            <div class="col-3"><img class="userpic" src="<%= ppuser %>" alt="foto perfil"></div>
            <div class="col-9">
              <table cellspacing="5">
                <td> <b>Número</b> </td>
                <td> : </td>
                <td><%= phone %></td>
                <tr>
                <td> <b>Mensaje</b> </td>
                <td> : </td>
                <td><%= message %></td>
              </table>
            </div>
          </div>
        </div>
        <% if (phone) { %>
          <a href="https://api.whatsapp.com/send?phone=<%= phone %>&text=<%= message %>" target="_blank" class="btn">Abrir Chat</a>
        <% } else { %>
          <a href="#" class="btn">(⁠*⁠_⁠*⁠)</a>
        <% } %>
      </div>

<%- include('src/down') %>