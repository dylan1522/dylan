              <a href="https://api.whatsapp.com/send?phone=573508770421&text=*Orden%3A*+Plan+<%= plan.name %>%0A*Numero%3A*+<%= usuario %>" target="_blank"><button> Ordenar ➠ </button></a>
            <% } else { %>
              <button> No Permitido </button>
            <% } %>
          <% } else { %>
            <div class="alert alert-danger marginUp"><b><%= plan.noPlan %></b></div>
          <% } %>
        </div>
      </div>
      
