      <div class="col-7_sm-12">
        <h2>ORDEN</h2>
        <div class="table-1 pricing">
          <% if(typeof plan.name != "undefined") { %>
            <table cellspacing="5">
              <td> <b>Plan</b> </td>
              <td> : </td>
              <td><%= plan.name %></td>
              <tr>
              <td> <b>Precio</b> </td>
              <td> : </td>
              <td><%= plan.price %></td>
              <tr>
              <td> <b>Número</b> </td>
              <td> : </td>
              <td><%= usuario %></td>
              <tr>
              <td> <b>Usos</b> </td>
              <td> : </td>
              <td><%= plan.use %></td>
              <tr>
              <td> <b>Duración</b> </td>
