<!DOCTYPE html>
<html lang="es">
<head>
  <%- include('src/head') %>
</head>
<body data-senna="data-senna" data-senna-surface="data-senna-surface">
  <div class="senna-loading-bar"></div>
  
  <header>
    <h1><a href="/" title="DrkBot"><span id="header"><%= botName %></span></a></h1>
    <%- include('src/header') %>
  </header>
  
  <div class="container">
    <div class="grid">
      <!-- Contenido -->
      <div class="col-7_sm-12">
        <h2>Información Usuario</h2>
        <div class="table-1">
          <div class="grid">
            <div class="col-3"><img class="userpic" src="<%= ppuser %>" alt="foto perfil"></div>
            <div class="col-9">
              <table cellspacing="5">
                <td> <b>Número</b> </td>
                <td> : </td>
                <td><%= profile.numero %></td>
                <tr>
                <td> <b>Contraseña</b> </td>
                <td> : </td>
                <td><%= profile.pass %></td>
              </table>
            </div>
          </div>
          <table cellspacing="5">
            <tr>
              <td> <b>Nombre</b> </td>
              <td> : </td>
              <td><%= profile.nombre %></td>
            <tr>
              <td> <b>Usos del bot</b> </td>
              <td> : </td>
              <td><%= profile.usoBot %></td>
            <tr>
              <td> <b>Premium</b> </td>
              <td> : </td>
              <td><%= profile.planPremium %></td>
            <tr>
              <td> <b>Dias Restantes</b> </td>
              <td> : </td>
              <td><%= profile.diasRestantes %></td>
            <tr>
              <td> <b>Usos Restantes</b> </td>
              <td> : </td>
              <td><%= profile.usosRestantes %></td>
          </table>
         </div>
      </div>
      
      <!-- Informacion General -->
      <div class="col-5_sm-12">
        <%- include('src/end') %>
        
        <h2>Cambiar Clave</h2>
        <div id="keyNotif"></div>
        <form id="app-change-apikey" method="post">
          <table>
            <td>
              <input type="text" name="apikey" id="apikey" class="bax" placeholder="Ingrese su contraseña"> <span class="highlight"></span>
              <span class="bar"></span>
            </td>
            <td><button class="btn" id="cload"> Enviar </button></td>
           </table>
        </form>
      </div>
    </div>
  </div>

  <footer>© DrkBot</footer>
  <script src="/assets/js/main.js" type="text/javascript"></script>
</body>
</html>